<%= simple_form_for(@story) do |f| %>
<%= f.error_notification %>
<div class="field">
  <div class="control">
    <%= f.input :title, label: "Title", input_html: { class: "input" }, wrapper: false, label_html: {class: "label"}, 
    placeholder: "Make it a good one...", autofocus: true %>
  </div>
  <div class="control">
    <%= f.input :body, label: "Body", input_html: { class: "textarea" }, wrapper: false, label_html: {class: "label"}, 
    placeholder: "Just start writing..." %>
  </div>
</div>
<%= f.button :submit, class: "button is-link is-rounded is-medium" %>
<% end %>