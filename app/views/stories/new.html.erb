<br />
<h1>Share a Story</h1>

<%= form_with model: @story do |form| %>
  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
    <% @story.errors.full_messages_for(:title).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :body %><br>
    <%= form.text_area :body %>
    <% @story.errors.full_messages_for(:body).each do |message| %>
      <div><%= message %></div>
    <% end %>  
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>