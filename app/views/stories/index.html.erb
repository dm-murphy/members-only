<section class="section">
  <div class="container">
    <div class="columns is-variable is-6-desktop">
      <% if user_signed_in? %>
        <%= render 'profile' %>
      <% else %>
        <div class="column is-one-quarter">
          <p class="panel-heading has-text-centered has-background-dark has-text-white">Writer Profile</p>
          <div class="panel-block has-background-warning">
          <p class="panel-heading has-text-centered has-background-warning title is-6">Log in to see profile</p>
          </div>
        </div>
      <% end %>
      
      <div class="column is-three-quarters has-background-white-ter">
      <h2 class="has-text-centered title is-3">Latest Stories</h2>
        <ul>
          <% @stories.each do |story| %>
           <li>
             <p class="title is-5">
             <%= link_to story.title, story %>
             </p>
           </li>
           <li>
             <p class="subtitle is-6">Written by:</p>
                <% if user_signed_in? %>
                  <li>
                    <%= story.user.name %>
                  </li>
                  <li class="is-italic">
                    <%= story.user.username %>
                  </li>
                <% else %>
                  <p class="subtitle is-6">Log in to see who wrote this story</p>
                <% end %>
          <% end %>
        </ul>
        <br />
        <%= link_to "Write your own story", new_story_path %>
        </div>

      </div>
    </div>
  
</section>